
model Post {
  id          String @id @default(cuid())
  title       String
  content     String @db.Text
  published   Boolean @default(false)
  publisherId String
  publisher   User @relation(fields: [publisherId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  @@map("posts")
}
